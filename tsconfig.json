{
  "compilerOptions": {
    "target": "ES2024", // latest ECMAScript features
    "module": "CommonJS", // tells the TypeScript compiler to generate CommonJS-style JavaScript code as its output.
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src",
    "allowJs": false,
    "strict": true, // Enable strict type checking (recommended)
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "esModuleInterop": true // allows TypeScript to handle CommonJS modules (like express) in a way that makes them work seamlessly with ES module syntax
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
